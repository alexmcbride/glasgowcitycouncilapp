<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/colorDarkGreen">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal">
        <ImageButton
            android:layout_height="64dp"
            android:layout_width="64dp"
            android:src="@drawable/ic_home"
            android:contentDescription="@string/main_text_news"
            android:id="@+id/imageHome"
            android:layout_marginRight="16dp"
            android:onClick="onClickNews"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/main_text_news"
            android:id="@+id/buttonHome"
            android:background="@null"
            android:textColor="@color/colorWhite"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="onClickNews"/>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal">
        <ImageButton
            android:layout_height="64dp"
            android:layout_width="64dp"
            android:src="@drawable/ic_tourists"
            android:contentDescription="@string/main_text_tourists"
            android:id="@+id/imageTourists"
            android:layout_marginRight="16dp"
            android:onClick="onClickTourists"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/main_text_tourists"
            android:background="@null"
            android:id="@+id/buttonTourists"
            android:textColor="@color/colorWhite"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="onClickTourists"/>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal">
        <ImageButton
            android:layout_height="64dp"
            android:layout_width="64dp"
            android:src="@drawable/ic_bins"
            android:contentDescription="@string/main_text_bins"
            android:id="@+id/imageBins"
            android:layout_marginRight="16dp"
            android:onClick="onClickBins"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/main_text_bins"
            android:background="@null"
            android:id="@+id/buttonBins"
            android:textColor="@color/colorWhite"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="onClickBins"/>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal">
        <ImageButton
            android:layout_height="64dp"
            android:layout_width="64dp"
            android:src="@drawable/ic_comment"
            android:contentDescription="@string/main_text_comments"
            android:id="@+id/imageComments"
            android:layout_marginRight="16dp"
            android:onClick="onClickComments"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/main_text_comments"
            android:background="@null"
            android:id="@+id/buttonComments"
            android:textColor="@color/colorWhite"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="onClickComments"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Logged in as &lt;name&gt;"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorYellow"
        android:id="@+id/textLoggedIn"/>
</LinearLayout>
